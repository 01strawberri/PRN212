<Window x:Class="PRN212HotelManagement.TransactionDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transaction Details" Height="500" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Transaction Details" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Transaction ID:" FontWeight="Bold"/>
            <TextBlock x:Name="txtTransactionId" Margin="0,0,0,10"/>

            <TextBlock Text="Booking Details:" FontWeight="Bold"/>
            <TextBlock x:Name="txtBookingDetails" Margin="0,0,0,10"/>

            <TextBlock Text="User Details:" FontWeight="Bold"/>
            <TextBlock x:Name="txtUserDetails" Margin="0,0,0,10"/>

            <TextBlock Text="Room Details:" FontWeight="Bold"/>
            <TextBlock x:Name="txtRoomDetails" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
